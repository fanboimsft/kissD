#!/bin/sh -e

./configure --prefix=/usr \
    --enable-unicode \
    --enable-jit \
    --enable-pcre2-16 \
    --enable-pcre2-32 \
    --enable-pcre2grep-libz \
    --enable-pcre2grep-libbz2 \
    --enable-pcre2test-libreadline \
    --disable-static

make
make DESTDIR="$1" install


# Remove docs.
rm -rf "$1/usr/share/doc"

